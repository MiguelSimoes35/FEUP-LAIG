                <rotate axis="x" angle="-90" />
                <translate x="0" y="0.5" z="-0.5" />
            </transformation>
            <materials>
                <material id="white" />
            </materials>
            <texture id="wood" />
            <children>
                <primitiveref id="plane"/>
            </children>
        </component>

        <component id = "wall_t3">
            <transformation>
                <rotate axis="x" angle="-90" />
                <translate x="0" y="-6" z="0" />
                <scale x="12" y="1" z="1" />
                <rotate axis="x" angle="90" />
                <translate x="0" y="0.5" z="-12.5"/>
            </transformation>
            <materials>
                <material id="white" />
            </materials>
            <texture id="wood" />
            <children>
                <primitiveref id="plane"/>
            </children>
        </component>

        <component id = "wall_t4">
            <transformation>
                <rotate axis="x" angle="90" />
                <rotate axis="z" angle="90" />
                <translate x="0" y="-6" z="0" />
                <scale x="12" y="1" z="1" />
                <rotate axis="x" angle="-90" />
                <translate x="0" y="0.5" z="12.5" />
            </transformation>
            <materials>
                <material id="white" />
            </materials>
            <texture id="wood" />
            <children>
                <primitiveref id="plane"/>
            </children>
        </component>

        <component id = "table">
            <transformation>
                <translate x="0" y="-1" z="0"/>
            </transformation>
            <materials>
                <material id="red" />
            </materials>
            <texture id="felt-mate" />
            <children>
                <componentref id="circle"/>
                <componentref id="torus" />
                <componentref id="leg1"/>
                
            </children>
        </component>

        <component id = "circle">
            <transformation>
                <scale x="1" y="0" z="1"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="circle"/>
                
            </children>
        </component>

        <component id = "torus">
            <transformation>
                <rotate axis="x" angle="90"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="torus"/>
                
            </children>
        </component>

        <component id = "leg1">
            <transformation>
                <rotate axis="x" angle="90"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="cylinder"/>
                
            </children>
        </component>

        <component id = "skybox">
            <transformation>
            </transformation>
            <materials>
                <material id="white2" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="sb_wall1"/>
                <componentref id="sb_wall2"/>
                <componentref id="sb_wall3"/>
                <componentref id="sb_wall4"/>
                <componentref id="sb_floor"/>

            </children>
