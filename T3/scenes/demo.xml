        <component id = "sb_floor">
            <transformation>
                <translate x="0" y="-11" z="0" />
                <scale x="30" y="30" z="30"/>
            </transformation>
            <materials>
                <material id="white3" />
            </materials>
            <texture id="beach-floor" />
            <children>
                <primitiveref id="plane"/>
                
            </children>
        </component>




    </components>
</lxs>
