        <component id = "sb_wall1">
            <transformation>
                <rotate axis="z" angle="90"/>
                <translate x="4" y="-15" z="0" />
                <scale x="30" y="30" z="30"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="beach-lateral" />
            <children>
                <primitiveref id="plane"/>
                
            </children>
        </component>

        <component id = "sb_wall2">
            <transformation>
                <rotate axis="z" angle="90"/>
                <translate x="4" y="0" z="-15" />
                <scale x="30" y="30" z="30"/>
